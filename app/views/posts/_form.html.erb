<%=form_for @post do |f| %>
 <%if @post.errors.any? %>
    <div id="errors">
      <h3><%=pluralize(@post.errors.count,"errors")%> prevented from saving this post</h3>
        <ul>
          <% @post.errors.full_messages.each do |msg|%>
          <li><%= msg %></li>
          <%end%>
        </ul>
    </div>
 <%end%>
<p><%= f.label :title%><br>
<%= f.text_field :title%></p>
<p><%= f.label :content%><br>
<%= f.text_area :content%></p>
<p><%= f.submit%></p>
<%end%>
